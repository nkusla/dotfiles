# dotfiles repo alias
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME'

# ls aliases
alias ls='ls --color=auto'
alias la='ls -A'
alias ll='ls -lhAF'

# cd aliases
alias ..='cd ..'
alias ..2='cd ../..'
alias ..3='cd ../../..'

# other
alias grep='grep --color=auto'
alias c="clear"
